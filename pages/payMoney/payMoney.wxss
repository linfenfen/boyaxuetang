/* pages/payMoney/payMoney.wxss */
.container{
  position:static;
}
.container .classDetail{
  width:85%;
  box-sizing: border-box;
  margin:40rpx 0 100rpx 20rpx;
  padding:10rpx;
  border: 4rpx solid #8bc899;
  border-radius: 15rpx;
}
.container .classDetail .item{
  display: flex;
  font-size:26rpx;
  padding: 20rpx 0;
  color:#22863e;
}
.container .classDetail .item .name{
  margin-right:20rpx;
}
.container .btnGroup{
  display:flex;
  padding:0 20rpx;
  margin-bottom:60rpx;
}
.container .btnGroup .btn{
  flex:1;
  background-color: #fff;
  border:4rpx solid #8bc899;
  font-size:30rpx;
  color:#22863e;
}
.container .btnGroup .btn:first-child{
  margin-right:10rpx;
}
.container .btnGroup.payGroup{
  position: absolute;
  left:0;
  right:0;
  bottom:20rpx;
  margin-bottom:0;
}
.container .btnGroup .paybtn{
  color:#fff;
  font-weight:bold;
  border:0;
}
.container .btnGroup .paybtn:first-child{
  flex:0 0 50%;
  margin-right:8%;
  background-color: #e9611d;
}
.container .btnGroup .paybtn:last-child{
  flex:1;
  background-color: #ff0000;
}