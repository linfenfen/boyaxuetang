/*每个课程的样式*/
.classBox{
  display: flex;
  flex-direction: column;
  align-items:center;
  margin:20rpx 0;
}
.classBox .classItem{
  display: flex;
  width:100%;
  height:200rpx;
   padding:15rpx 10rpx;
  flex-direction: row;
  align-items: center;
  margin-bottom:20rpx;
  background-color:#fff;
}
.classItem .leftItem{
  display: flex;
  align-items: center;
  width:20%;
}
.leftItem image{
  width:140rpx;
  height:140rpx;
  margin:0 auto;
}
.classItem .midItem{
  display: flex;
  flex-direction: column;
  font-weight: bold;
  width:55%;
  margin:0 20rpx;
}
.midItem .title{
  height:110rpx;
  font-size:35rpx;
  color:#f41832;
}
.midItem .time,.midItem .address,.midItem .itemName{
  height:42rpx;
  line-height: 42rpx;
}
.classItem .rightItem{
display: flex;
flex-direction: column;
font-weight: bold;
}
.rightItem .mastar{
  height:100rpx; 
}
.rightItem .mastar text{
  display: block;
  width:100%;
}
.rightItem button{
  font-size:26rpx;
  padding:8rpx;
  margin:5rpx 0;
  line-height:30rpx;
  background-color:greenyellow;
}
.kong{
  height:50rpx;
}
