/* pages/mainIndex/mainIndex.wxss */
@import "/pages/wxss/class.wxss";
@import "/pages/wxss/navigation.wxss";

/*搜索框*/
.searchContainer{
  width:100%;
  background-color:#ededed;
  padding:20rpx 0;
}
.searchBox{
  display: flex;
  width:92%;
  height:65rpx;
  flex-direction: row;
  align-items: center;
  margin-left:20rpx;
  border-radius:5px;
  background-color: #fff;
}
.searchBox image{
  display: inline-block;
  width:50rpx;
  height:50rpx;
  margin:0 10rpx;
}
.searchBox input{
  padding-left:5rpx;
  font-size:28rpx;
}
.inputPlace{
  color:#999;
}

/*课程分类*/
.classify{
  width:100%;
  display: flex;
  flex-direction:row;
  align-items: center; 
  flex-wrap: wrap;
  margin:5% 0;
}
.classify .item{
  display: flex;
  width:25%;
  margin:25rpx 0;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
  font-size:28rpx;
}
.classify .item image{
  width:85rpx;
  height:85rpx;
  margin-bottom:10rpx;
}
/*热门课程 部分样式导入实现*/
.hotClass{
  padding: 10rpx 25rpx;
  background-color: #dcdcdc;
}
.hotClass .hotTitle{
  font-family: Arial, Helvetica, sans-serif;
  font-size:45rpx;
  font-weight: bold;
  color: #15d083;
}

